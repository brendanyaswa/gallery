pipeline {
    agent any


    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', url: 'https://github.com/brendanyaswa/gallery'
            }
        }

        

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }

       
    }

    post {
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
